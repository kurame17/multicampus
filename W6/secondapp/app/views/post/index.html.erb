<div style="text-align:center">
  <h2>게시판</h2>
</div>
<div style="text-align:right">
  <p><a class="btn btn-primary ml-auto" role="button" href="/post/new">글쓰기</a></p>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">작성자</th>
      <th scope="col">제목</th>
      <th scope="col">내용</th>
      <th scope="col">작성시간</th>
      <th scope="col">보기</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= post.username %></td>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.created_at %></td>
      <td><a href=/post/show/<%= post.id %>>보러가기</a></td>
    </tr>
    <% end %>
  </tbody>
</table>